# Ingenio Backend 环境变量配置示例
# 复制此文件为 .env 并填入真实值

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ingenio_dev
DB_USER=postgresql
DB_PASSWORD=your-database-password-here

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 七牛云AI服务（OpenAI兼容接口）
QINIU_AI_API_KEY=your-qiniu-ai-api-key-here

# OpenAPI 网关（Gemini / Claude）
GACCODE_OPENAPI_BASE_URL=https://gaccodeapi.com/v1
GACCODE_OPENAPI_API_KEY=your-gaccode-openapi-key

# 兼容旧变量名（可选）
AIGATEWAY_URL=${GACCODE_OPENAPI_BASE_URL}
AIGATEWAY_TOKEN=${GACCODE_OPENAPI_API_KEY}

# G3 Agent 使用 OpenAPI 网关
G3_AI_PROVIDER=eca-gateway
G3_AI_MODEL=claude-opus-4-5-20251101

# ============================================
# LangChain4j G3 引擎（推荐方案）
# ============================================
# 运行引擎开关（legacy / lc4j）
INGENIO_G3_AGENT_ENGINE=lc4j
INGENIO_G3_RAG_ENGINE=lc4j

# Claude / Gemini（OpenAI 兼容网关）
INGENIO_LC4J_CLAUDE_BASE_URL=${GACCODE_OPENAPI_BASE_URL}
INGENIO_LC4J_CLAUDE_API_KEY=${GACCODE_OPENAPI_API_KEY}
INGENIO_LC4J_CLAUDE_MODEL=claude-opus-4-5-20251101
INGENIO_LC4J_CLAUDE_MAX_TOKENS=12000

INGENIO_LC4J_GEMINI_BASE_URL=${GACCODE_OPENAPI_BASE_URL}
INGENIO_LC4J_GEMINI_API_KEY=${GACCODE_OPENAPI_API_KEY}
INGENIO_LC4J_GEMINI_MODEL=gemini-3-pro-high

# DeepSeek（兜底模型）
INGENIO_LC4J_DEEPSEEK_BASE_URL=https://api.qnaigc.com/v1
INGENIO_LC4J_DEEPSEEK_API_KEY=your-deepseek-api-key-here
INGENIO_LC4J_DEEPSEEK_MODEL=deepseek-r1-0528

# Uniaix Embedding（OpenAI 兼容）
UNIAIX_BASE_URL=https://www.uniaix.com
UNIAIX_API_KEY=your-uniaix-api-key-here
UNIAIX_EMBEDDING_MODEL=text-embedding-3-large
UNIAIX_EMBEDDING_FALLBACK_MODEL=text-embedding-3-large
UNIAIX_EMBEDDING_DIMENSION=2048
UNIAIX_EMBEDDING_FALLBACK_DIMENSION=2048

# RAG Embedding 维度（请设置为实际模型维度）
INGENIO_G3_RAG_EMBEDDING_DIMENSION=2048

# MinIO对象存储
MINIO_ENDPOINT=http://127.0.0.1:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# JWT密钥（至少32字符）
JWT_SECRET_KEY=your-jwt-secret-key-min-32-characters

# 邮件服务（QQ邮箱）
MAIL_HOST=smtp.qq.com
MAIL_PORT=465
MAIL_USERNAME=your-email@qq.com
MAIL_PASSWORD=your-authorization-code

# ============================================
# Supabase配置（用于WEB模式 - 简单网页应用）
# ============================================
# Supabase项目URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase服务角色密钥（service_role key）- 拥有完全管理员权限
# ⚠️ 危险：此密钥绕过RLS，仅在服务端使用
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Supabase JWT密钥（用于验证和签发JWT）
SUPABASE_JWT_SECRET=your-jwt-secret

# Supabase Access Token（用于Management API - 创建项目、管理数据库等）
SUPABASE_ACCESS_TOKEN=sbp_your-access-token
