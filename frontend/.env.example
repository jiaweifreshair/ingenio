# 灵构Creator环境变量示例
# 复制此文件为 .env.local 并填写实际值

# API基础URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000

# 模型配置（开发环境可选）
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# 数据库连接（开发环境）
DATABASE_URL=postgresql://ingenio:ingenio@localhost:5432/ingenio

# Redis连接
REDIS_URL=redis://localhost:6379

# 认证密钥
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# 第三方服务（可选）
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ingenio-uploads

# ============================================
# Supabase配置（用于WEB模式 - 简单网页应用）
# ============================================
# Supabase项目URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase匿名公钥（anon key）- 用于前端，可安全暴露
# 从 Supabase Dashboard > Settings > API > anon public 获取
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Supabase服务角色密钥（service_role key）- 仅用于服务端API路由
# ⚠️ 危险：此密钥绕过RLS，禁止暴露给客户端
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Supabase JWT密钥（用于自定义JWT验证）
SUPABASE_JWT_SECRET=your-jwt-secret
